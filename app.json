{
  "expo": {
    "name": "Scenario",
    "slug": "Scenario",
    "scheme": "Scenario",
    "description": "Find any movie or TV Shows and make watchlists for the ones to remember.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ${expo.name} to access your photos.",
          "cameraPermission": "Allow ${expo.name} to access your camera."
        }
      ]
    ],
    "experiments": {
      "tsconfigPaths": true
    }
  }
}
